<form>
    <h2 class="mb-3"><?php echo $this->translate('Thank you, %s', $meta['name']); ?></h2>

    <?php if ($points === 0): ?>
    <p><?php $this->show("Unfortunately, you didn't answer any question correctly"); ?></p>

    <?php else: ?>
    <h4 class="mb-3"><?php echo $this->translate('You have got %s points', $points); ?></h4>

    <?php endif; ?>

    <?php if ($takenTime): ?>
    <p><?php echo $this->translate('Taken time'); ?>: <?php echo $takenTime; ?></p>
    <?php endif; ?>

    <?php if ($canContinue): ?>
    <p>
        <a class="btn btn-primary" href="<?= $this->url('Quiz:Quiz@continueAction'); ?>"><?php $this->show('Continue'); ?></a>
    </p>
    <?php else: ?>
    <p>
        <a class="btn btn-primary" href="<?= $this->url('Quiz:Quiz@abortAction'); ?>"><?php $this->show('Start again'); ?></a>
    </p>
    <?php endif; ?>
</form>