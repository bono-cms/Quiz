<?php

use Krystal\Widget\GridView\GridViewWidget;
use Krystal\Form\Element;
use Cms\View\Icon;

defined('KRYSTAL') or die;

?>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <h2 class="page-header"><i class="glyphicon glyphicon-th-list"></i> <?php echo $this->getBreadcrumbBag()->getLastName(); ?> <small>(<?php echo count($answers); ?>)</small></h2>

            <form autocomplete="off">
                <?= $this->widget(new GridViewWidget($answers, array(
                    'tableClass' => 'table table-hover table-bordered table-striped table-condensed',
                    'rowAttributes' => array(
                        'class' => function($row) use ($answer){
                            return $row->getId() == $answer->getId() ? 'info' : null;
                        }
                    ),

                    'columns' => array(
                        array(
                            'column' => 'id',
                            'label' => '#'
                        ),

                        array(
                            'column' => 'answer'
                        ),

                        array(
                            'column' => 'correct',
                            'translateable' => true,
                            'value' => function($entity){
                                return $entity->getCorrect() ? 'Yes' : 'No';
                            }
                        ),

                        array(
                            'column' => 'order'
                        )
                    ),

                    'actions' => array(
                        'edit' => function($row){
                            return Icon::edit(
                                $this->url('Quiz:Admin:Answer@editAction', $row['id']),
                                $this->translate('Edit this question')
                            );
                        },

                        'remove' => function($row){
                            return Icon::remove(
                                $this->url('Quiz:Admin:Answer@deleteAction', $row['id']),
                                $this->translate('Remove this question')
                            );
                        }
                    )
                ))); ?>
            </form>

            <?php if (empty($answers)): ?>
            <div class="center-block">
                <h2 class="text-center text-muted"><i class="glyphicon glyphicon-remove"></i> <?php $this->show('No answers'); ?></h2>
            </div>
            <?php endif; ?>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card">
            <h2 class="page-header"><i class="glyphicon glyphicon-floppy-save"></i> <?php $this->show(!$answer->getId() ? 'Add new answer' : 'Edit the answer'); ?></h2>

            <form data-group="answer" autocomplete="off">
                <?php echo Element::hidden('answer[id]', $answer->getId()); ?>
                <?php echo Element::hidden('answer[question_id]', $answer->getQuestionId()); ?>

                <div class="form-group">
                    <label class="col-lg-10 control-label"><?php $this->show('Answer'); ?></label>
                    <div class="col-lg-10">
                        <?php echo Element::text('answer[answer]', $answer->getAnswer(), array('class' => 'form-control', 'placeholder' => $this->translate('Type the answer'))); ?>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        <label class="col-lg-10 control-label"><?php $this->show('Sort order'); ?></label>
                        <div class="col-lg-10">
                            <?php echo Element::text('answer[order]', $answer->getOrder(), array('class' => 'form-control', 'placeholder' => $this->translate('Sorting order. By default comes last'))); ?>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="form-group">
                        <label class="col-lg-10 control-label"><?php $this->show('Corectness'); ?></label>
                        <div class="col-lg-10">
                            <?php echo Element::select('answer[correct]', $this->translateArray(
                                array(
                                    '0' => 'This answer is incorreсt',
                                    '1' => 'This answer is correсt'
                                )), $answer->getCorrect(), array('class' => 'form-control')); ?>
                        </div>
                    </div>
                </div>

                <?php $this->loadPartial('actions', array(
                    'new' => !$answer->getId(),
                    'add' => array('Quiz:Admin:Answer@listAction', $answer->getQuestionId()),
                    'edit' => 'Quiz:Admin:Answer@editAction',
                    'save' => 'Quiz:Admin:Answer@saveAction',
                    'cancel' => !$answer->getId() ? 'Quiz:Admin:Browser@indexAction' : array('Quiz:Admin:Answer@listAction', $answer->getQuestionId())
                )); ?>
            </form>
        </div>
    </div>
</div>
